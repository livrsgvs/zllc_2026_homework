/* USER CODE BEGIN 4 */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  if (htim->Instance == TIM2) {
    /* 每次 TIM2 中断触发，运行控制任务（10 ms 周期）
       控制目标：
       - 若 motor0.use_direct_speed == 1 -> 内环速度控制，使用 motor0.speed_set (rpm)
       - 若 motor0.use_direct_speed == 0 -> 串级位置控制，使用 motor0.position_set (rad)
       要测试三档速度（0 / 中 / 高），请在 main() 初始化部分或通过调试器修改 motor0.speed_set。 */
    motor_task((void *)&motor0);
  }
}

  MX_GPIO_Init();
  MX_CAN_Init();
  /* USER CODE BEGIN 2 */
CAN_measures_init();

    /* 创建并初始化 motor0，用于通过 PID 控制单个电机（ID = 0x201） */  
    motor0.id = 1; /* 对应 CAN_3508_M1_ID = 0x201 */
    motor_init(&motor0, get_motor_measure_point(0));
    /* 默认使用直接速度测试模式：在这里手动设置三个速度档位中的一个
      - motor0.use_direct_speed = 1 表示直接速度控制（内环）
      - motor0.speed_set 单位为 rpm（例如 0, 1000, 3000）
      要切换到位置控制把 use_direct_speed 设为 0 并调整 position_set（弧度）
    */
    motor0.use_direct_speed = 1; /* 1=速度模式(直接测试)，0=位置串级模式 */
    motor0.speed_set = 100.0f; /* 初始速度  0 rpm；手动修改为 1000 或 3000 来测试 */

  /* 启动 TIM2 中断以周期运行 motor_task（在 MX_TIM2_Init() 已配置定时器） */
  HAL_TIM_Base_Start_IT(&htim2);
